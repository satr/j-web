<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:c='urn:import:io.github.satr.jweb.webshop.gwt.main.client.common.views'>
    <g:HTMLPanel>
        <h3>Login</h3>
        <div>
            <c:ErrorView ui:field="errorView" />
            <div>
                <table class="product">
                    <tr><td>Email</td>
                        <td><g:TextBox ui:field="email" /></td>
                    </tr>
                    <tr><td>Password</td>
                        <td><g:PasswordTextBox ui:field="password" /></td>
                    </tr>
                </table>
            </div>
            <br />
            <div>
                <g:Button ui:field="processLogin">Login</g:Button>
                <g:Button ui:field="cancelLogin">Cancel</g:Button>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>